    "version": "0.2.0",
    "configurations": [
        {
            "name": "MS Edge Debugger",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "http://localhost:3011",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "start dev"
        },
        {
            "name": "Chrome Debugger",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3011",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "start dev"
        }
    ]
}